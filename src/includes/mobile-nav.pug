.mobile-nav
  .container
    .mobile-nav__wrap
      mixin controller(icon,title,count,modify,link)
        .mobile-nav__item(class=modify)
          a(href=link).mobile-nav__controller
            .mobile-nav__controller-top
              .mobile-nav__controller-icon
                if count === ''
                else
                  .mobile-nav__controller-count
                    span=count
                i(class='icon-ic_'+icon)
            .mobile-nav__controller-title=title
      +controller('happy_home','Главная','','active')
      +controller('menu','Каталог','','catalog-trigger-js','#catalog-menu')
      +controller('cart','Корзина', 996,'cart-js')
      +controller('favorite','Избранное', 6)
      +controller('happy_profile','Войти','','log-in')
